.album
    display: flex
    flex-direction: columns 
    justify-content: center
    align-items: center
    min-height: 90vh
    font-family: Arial

    .album-container
        width: 100%
        display: flex
        justify-content: center
        min-height: 80vh
        .content
            width: 100%
            height 80vh
            display: grid
            grid-template-columns: 2fr 3fr 1fr
            grid-gap: 1%                
            .portada-album
                grid-column: 1 / 2
                max-width : 100%
                max-height: 100%
                justify-content: center
                align-items: center
                background: url('../../../../assets/img/portada3.jpg') no-repeat center;
                -webkit-background-size: cover;
                -moz-background-size: cover;
                -o-background-size: cover;
                background-size: cover;
                height: 100%;
                width: 100% ;
                text-align: center;
            .descripcion-album
                grid-column: 2 / 3
                padding: 10px
                text-align: justify
            .resena-album
                grid-column: 1 / 3
                display: grid
                grid-template-columns: 1fr
                grid-template-rows: 2fr 1fr
                row-gap: 2%
                .area-resena
                    width: 100%   
                    textarea
                        margin-top: 2%
                        width: 99%
                        height 95%
                        resize: none
                .votar
                    display: flex
                    justify-content: center
                    align-items: center
                    text-align: center
                    .btn-votar
                        width: 100%
                        height : 5vh
                        padding: 3%
                        line-height: 0px
                        border-style: none
                        border: 2px solid #CA6F1E 
                        border-radius: 10px
                        font-family: Arial
                        font-size: 20px
                        background-color: #E67E22
                        color: white
            aside
                grid-column: 3 / 4
                grid-row: 1 / 3
                width: 99%                
                h2
                    text-align: center
                    font-size: 12px
                .album-relacionado
                    height 75vh
                    display: grid
                    grid-template-columns: 1fr
                    grid-template-rows: repeat(4, 1fr)
                    row-gap: 1%
                    overflow:hidden
                    div
                        background: url('../../../../assets/img/portada3.jpg') no-repeat center;
                        -webkit-background-size: cover;
                        -moz-background-size: cover;
                        -o-background-size: cover;
                        background-size: cover;
                        height: 100%;
                        width: 100% ;
                        text-align: center;
                        transition:all .5s ease-in-out;
                    div:hover
                        -webkit-transform:scale(.96);
                        transform:scale(.96);
                    

     