.grid-albumes
    section
        height 300px
        width 100%
        background-color rgba(0,0,0, .1)
        display flex
        align-items center
        justify-content center
        &:first-child
            margin-bottom 20px
        &:last-child
            margin-top 20px
        .titulo
            background-color black
            color white
            height 100%
            width 100%
            display flex
            justify-content center
            align-items center
            max-width 200px

span
    display: flex
    font-family: Arial
    font-size: 20px
    margin: 20px
    justify-content: center
    align-items: center
    transition:all 0.6s ease

span:hover
    color: white
    font-size: 30px

.grid-albumes-content
    display: flex
    flex-wrap: nowrap;
    margin-top: 20px
    justify-content: center
    align-content: center
    width 100%
    .panel
        min-width 200px
        .album
            display grid
            grid-template-rows 200px 50px
            border-radius 5px
            overflow hidden
            .imagen
                overflow hidden
                background-repeat no-repeat
                background-size cover
                background-position center

.panel
    justify-content: center
    align-items: center
    margin: 5px
    padding: 5px
    transition:all 0.6s ease
    font-family: Arial
.panel:hover
    background-color: #efefef
img
    width: 400px;
    margin-left: 10px;
    margin-right: 10px
